generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  assistant
}

model Conversation {
  id         Int      @id @default(autoincrement())
  role       Role
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  conversation_id  String
  AllConversations AllConversations @relation(fields: [conversation_id], references: [conversation_id])
}

model AllConversations {
  conversation_id String   @id
  title           String
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now()) @updatedAt

  Conversation Conversation[]

  user_id Int
  User    User @relation(fields: [user_id], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  AllConversation AllConversations[]
}
